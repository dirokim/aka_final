	<select id="getDepartmentMemberList" resultType="DepartmentVO">
		SELECT * 
		FROM MEMBER
		WHERE DEPARTMENT_ID = #{department_id} 
	</select>
	
	<select id="getDepartmentList" resultType="DepartmentVO">
	SELECT DEPA.DEPARTMENT_ID
	,DEPA.DEPARTMENT_SUPER_ID
	,DEPA.DEPARTMENT_NAME
	,DEPA.SORTORDER
	FROM DEPARTMENT DEPA
	INNER JOIN DEPARTMENT DEPAA
	ON (DEPA.DEPARTMENT_SUPER_ID = DEPAA.DEPARTMENT_ID) 
	GROUP BY DEPARTMENT_NAME
	</select>

	
	
	
	
	
	
